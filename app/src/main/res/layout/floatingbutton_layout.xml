<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floating_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        fab:menu_colorNormal="@color/main_menu_normal"
        fab:menu_colorPressed="@color/main_menu_pressed">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check"
            fab:fabSize="mini"
            fab:fab_colorNormal="@color/normal"
            fab:fab_colorPressed="@color/press" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrowleft"
            fab:fabSize="mini"
            fab:fab_colorNormal="@color/normal"
            fab:fab_colorPressed="@color/press" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bell"
            fab:fabSize="mini"
            fab:fab_colorNormal="@color/normal"
            fab:fab_colorPressed="@color/press" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cloud"
            fab:fabSize="mini"
            fab:fab_colorNormal="@color/normal"
            fab:fab_colorPressed="@color/press" />
    </com.github.clans.fab.FloatingActionMenu>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floating_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/floating_main"
        fab:menu_colorNormal="#5376ab"
        fab:menu_icon="@drawable/customerservice"
        fab:menu_colorPressed="#6792d2">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_start"
            fabSize="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_fill"
            fab:fab_colorNormal="#5376ab"
            fab:fab_colorPressed="#6792d2" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_stop"
            fabSize="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stop"
            fab:fab_colorNormal="#5376ab"
            fab:fab_colorPressed="#6792d2" />


    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>